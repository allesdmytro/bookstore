<%= form_with model: author do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'input is-primary' %>
      <% author.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.submit class: 'button is-success' %>
    </div>
  <% end %>